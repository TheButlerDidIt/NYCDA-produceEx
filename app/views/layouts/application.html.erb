<!DOCTYPE html>
<html>
  <head>
    <title>ProduceEx</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="navbar">
  		<ul>
  			<li><%= link_to "Produce Land", root_path %></li>
        <li><%= link_to "About", static_pages_about_path %></li>
        <li><%= link_to "Help", static_pages_help_path %></li>
        <li></li>
  				<% if !current_seller %>
          <li><%= link_to "Sign In", new_seller_session_path %></li>
          <li><%= link_to "Sign Up", new_seller_registration_path %></li>
          <% else %>
  			<li><%= link_to("Sign out", destroy_seller_session_path, :method => :delete) %></li>
  				<% end %>

    
  		</ul>
  	</div>
    <div class="container">
    <%= yield %>
    </div>

  </body>
</html>
