<!DOCTYPE html>
<html>
  <head>
    <title>ProduceEx</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="navbar">
  		<ul>
  			<li><%= link_to "The Produce Place", root_path %></li>
  			<li><%= link_to "Sign In", new_seller_session_path %></li>
  			<li><%= link_to "Sign Up", new_seller_registration_path %></li>
  				<% if current_seller %>
  			<li><%= link_to "Sign Out", destroy_seller_session %></li>
  				<% end %>
  		</ul>
  	</div>
    <%= yield %>
  </body>
</html>
