<div class="background_image">
<h1>Produce Land</h1>
<p>The Freshest Produce In The World</p>
<% if !current_seller %>
<%= button_to "Sign Up", new_seller_registration_path, :method => "get", id: "signup_frontpage" %>
<% end %>
</div>

<h2 style="text-align: center">New Sellers To Produce Land</h2>

<% @sellers.last(4).each do |seller| %>
<div class="col-sm-3 new_market">
	<div><%= link_to seller.name, profiles_show_path %></div>
	<div><%= seller.street_address %></div>
	<div><%= seller.city %>, <%= seller.state %> <%= seller.zipcode %></div>
</div>
<% end %>

